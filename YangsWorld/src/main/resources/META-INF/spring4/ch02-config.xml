<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="user1" class="com.yang.myapp.spring4.User">
		<constructor-arg value="yang" />
		<constructor-arg value="1234" />
	</bean>
	
	<bean id="user2" class="com.yang.myapp.spring4.User">
		<constructor-arg value="world" />
		<constructor-arg value="1234" />
	</bean>
	
	<bean id="userRepository" class="com.yang.myapp.spring4.UserRepository">
		<property name="users">
			<list>
				<ref bean="user1" />
				<ref bean="user2" />
			</list>
		</property>
	</bean>
	
	<bean id="pwChangeSvc" class="com.yang.myapp.spring4.PasswordChangeService">
		<constructor-arg ref="userRepository" />
	</bean>
	
	<bean id="authFailLogger" class="com.yang.myapp.spring4.AuthFailLogger">
		<property name="threshold" value="5" />
	</bean>

	<bean id="authenticationService" class="com.yang.myapp.spring4.AuthenticationService">
		<property name="userRepository" ref="userRepository" />
		<property name="failLogger" ref="authFailLogger" />
	</bean>
</beans>
